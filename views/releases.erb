<% container "alt" %>

<div class="col colA">
  <section class="releases">
    <% releases.each do |release| %>
    <article class="release">
      <header>
        <h2><%= release.title %></h2>
        <!-- TODO: Show release date using time -->
        <!-- FIXME: move ul outside of header to give room for release date -->
        <ul>
          <% release.links.each do |link| %>
          <li><%= link.to_html %></li>
          <% end %>
        </ul>
      </header>
      <div class="notes">
        <pre><%= release.notes %></pre>
      </div>
    </article>
    <% end %>
  </section>
</div>

